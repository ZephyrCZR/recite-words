<view class="bnav-content base-bg-color"><scroll-view class="bg-white nav book-nav" scroll-x scroll-with-animation scroll-left="{{scrollLeft}}"><block wx:for="{{booksList}}" wx:for-item="category" wx:for-index="index" wx:key="index"><view class="{{['cu-item',index==tabCur?'text-green cur':'']}}" data-id="{{index}}" data-event-opts="{{[['tap',[['changeSwiperCurrent',[index]]]]]}}" bindtap="__e">{{''+category.type+''}}</view></block></scroll-view><swiper class="swiper-content" current="{{tabCur}}" data-event-opts="{{[['change',[['swiperChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{booksList}}" wx:for-item="category" wx:for-index="index" wx:key="index"><swiper-item><scroll-view class="swiper-item " scroll-y><block wx:for="{{category.list}}" wx:for-item="book" wx:for-index="index" wx:key="index"><block wx:if="{{category.list.length}}"><view class="book-card  shadow-warp bg-white margin-top"><view class="book-cover shadow"><view class="book-cover-img"><image src="../../../static/imgs/common2000.jpg" mode="widthFix"></image></view></view><view class="book-desc"><text class="book-name base-text-primary base-text-primary ">{{book.book_name}}</text><text class="book-desc-text base-text-sub base-color-sub">{{book.describe}}</text><text class="book-wordsamount base-text-sub base-color-sub">{{"单词量："+book.amount}}</text></view><view class="book-btn"><view hidden="{{!(category.type!=='我的')}}" class="cu-btn bg-olive round shadow btn-text" data-name="{{book.book_name}}" data-event-opts="{{[['tap',[['onTapAdd',['$event']]]]]}}" bindtap="__e">学习</view><view hidden="{{!(category.type==='我的')}}" data-name="{{book.book_name}}" data-event-opts="{{[['tap',[['onTapRemove',['$event']]]]]}}" bindtap="__e"><text class="cuIcon-more"></text></view></view></view></block></block></scroll-view></swiper-item></block></swiper></view>